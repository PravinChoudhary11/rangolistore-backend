{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "singularName": "review",
    "pluralName": "reviews",
    "displayName": "reviews",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "rating": {
      "type": "integer",
      "max": 5,
      "min": 1,
      "default": 5,
      "required": true
    },
    "review": {
      "type": "richtext",
      "required": true
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "reviews"
    },
    "tittle": {
      "type": "string"
    },
    "verified": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "helpful": {
      "type": "integer",
      "default": 0
    },
    "notHelpful": {
      "type": "integer",
      "default": 0
    }
  }
}
